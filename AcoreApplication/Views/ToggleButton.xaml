<UserControl x:Class="AcoreApplication.Views.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcoreApplication.Views"
             mc:Ignorable="d" d:DesignWidth="42">

    <Viewbox Stretch="UniformToFill">
        <Grid>
            <Rectangle x:Name="Back" Fill="#FF909090" HorizontalAlignment="Center" Height="25" VerticalAlignment="Center" Width="40" RadiusY="13.2" RadiusX="13.2" Margin="0"/>
            <Ellipse x:Name="Dot" Fill="#FFFFFEFE" HorizontalAlignment="Center" Height="22" VerticalAlignment="Center" Width="22" MouseLeftButtonDown="Dot_MouseLeftButtonDown"/>
        </Grid>
    </Viewbox>
</UserControl>
